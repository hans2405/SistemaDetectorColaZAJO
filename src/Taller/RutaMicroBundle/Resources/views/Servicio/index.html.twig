{% extends '::layout.html.twig' %}

{% block title %}Lista de Servicios{% endblock %}

{% block section %}

    <table id="example" cellpadding="0" cellspacing="0" border="0" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('servicio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('servicio_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('servicio_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<br>
        <ul>
            <a class="btn btn-primary" href="{{ path('servicio_new') }}">
                Registrar
            </a>
    </ul>
    {% endblock %}
