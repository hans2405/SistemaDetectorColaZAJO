{% extends '::layout.html.twig' %}
{% block title %}Editar linea de micro{% endblock %}
{% block section%}

<div class="row">
  <div class="span4"></div>
  <div class="span4">
    <h2>{{ block('title') }}</h2>

    <form action="{{ path('lineamicro_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Editar</button>
        </p>
    </form>

    <form action="{{ path('lineamicro_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit">Eliminar</button>
    </form>
    <a href="{{ path('lineamicro') }}">
        Ir a la lista
    </a>
    
</div>
</div>
{% endblock %}
