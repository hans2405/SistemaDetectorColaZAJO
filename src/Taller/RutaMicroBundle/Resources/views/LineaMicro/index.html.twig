{% extends '::layout.html.twig' %}
{% block title %}Lineas de micros{% endblock %}
{% block section%}
<h2>{{ block('title') }}</h2>
<section class="group">  
    <table id="example" cellpadding="0" cellspacing="0" border="0" class="display">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>

                <th>Foto</th>
                <th>Acccion</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lineamicro_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.foto }}</td>
                <td>
                    <a href="{{ path('lineamicro_show', { 'id': entity.id }) }}">ver</a>
                    ,
                    <a href="{{ path('lineamicro_edit', { 'id': entity.id }) }}">editar</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</section>
<a  class="btn btn-primary" href="{{ path('lineamicro_new') }}">
    Nueva linea
</a>
{% endblock %}
