{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Horario</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Horaapertura</th>
                <td>{{ entity.horaApertura }}</td>
            </tr>
            <tr>
                <th>Horacierre</th>
                <td>{{ entity.horaCierre }}</td>
            </tr>
            <tr>
                <th>Dias</th>
                <td>{{ entity.dias }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('horario') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('horario_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('horario_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
