{% extends '::layout.html.twig' %}

{% block title %}Modificar Entidad{% endblock %}

{% block section%}

<div class="row">
    <div class="span4"></div>
    <div class="span4">

        <form action="{{ path('entidad_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
            <p>
                <button class="btn btn-primary" type="submit"> Modificar </button>
            </p>
        </form>

        <ul class="record_actions">
            <li>
                <a href="{{ path('entidad') }}">
                    Volver a la Lista de Entidades
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
